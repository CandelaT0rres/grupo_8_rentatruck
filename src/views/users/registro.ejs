<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head') %>
    <title>Registro</title>
    <script src="/js/registro.js"></script>
</head>

<body class="container registro">
    <header>
        <div class="row justify-content-center">
            <div class="d-flex flex-column justify-content-center align-items-center">
                <h1 class="fw-normal text-dark fw-bold">Rent-A-Truck</h1>
                <a href="/"><img class ="logo rounded-pill" src="/img/logo.jpg" alt="logo"></a>
                <h3 class="fw-bold text-dark">Creá tu cuenta</h2>
            </div>
        </div>

    </header>
    <main class='container'>
        
        <div class="d-flex justify-content-center">
            <div class="row section-1-home container ">
                <form action="/user/registro" method="post" enctype="multipart/form-data" class="row g-3 fondo-registro" id="formulario-registro">
                    <div class="col-md-6">
                        <label for="nombre" class="form-label">Nombre/Razón social</label>
                        <input type="text" name="nombre" id="nombre" class="form-control" id="nombre">
                        <h5 class="none" id="errorNombre"></h5>
                    </div>
    
                    <div class="col-md-6">
                        <label for="direccion" class="form-label">Dirección</label>
                        <input type="text" class="form-control" id="direccion" name="direccion">
                        <h5 id="errorDireccion" class="none"></h5>
                    </div>
                    <div class="col-md-6">
                        <label for="apellido" class="form-label">Apellido/Nombre Fantasía</label>
                        <input type="text" class="form-control" id="apellido" name="apellido">
                        <h5 class="none" id="errorApellido"></h5>
                    </div>
                    <div class="col-md-6">
                          <label for="telefono" class="form-label">Teléfono</label>
                          <input type="number" class="form-control" id="telefono" name="telefono">
                          <h5 class="none" id="errorTelefono"></h5>
                    </div>
                    <div class="col-md-6">
                        <label for="dni" class="form-label">DNI o CUIT</label>
                        <input type="number" class="form-control" id="dni" name="dni">
                        <h5 class="none" id="errorDni"></h5>
                    </div>
                    <div class="col-md-6">
                        <label for="email" class="form-label">E-Mail</label>
                        <input type="email" class="form-control" id="email" name="email">
                        <h5 class="none" id="errorEmail"></h5>
                    </div>
                    <div class="col-md-6 licencia none">
                        <label for="licencia" class="form-label">Nº de Licencia</label>
                        <input type="number" class="form-control" id="licencia" name="licencia" id="licencia">
                        <h5 class= 'none' id="licenciaH5"></h5>
                    </div>
                    <div class="col-md-6">
                        <label for="password" class="form-label">Contraseña</label>
                        <input type="password" class="form-control" id="password" name="password">
                        <h5 class="none" id="errorPassword"></h5>
                    </div>
                    
                    <div class="col-md-6">
                        <label for="password2" class="form-label">Repita su contraseña</label>
                        <input type="password" class="form-control" id="password2" name="password2">
                        <h5 class="none" id="errorPassword2"></h5>
                      </div>
                    <div class="col-md-6 mt-4">
                        <label for="img" class="form-label">Imágen de perfil</label>
                        <input type="file" name="img" id="img" class="form-control">
                        <h5 class="none" id="errorImg"></h5>                      
                    </div>
                    <div class="col-md-6 mt-4">
                        <label for="id_rol" class="form-label">Tipo de usuario</label>
                        <select name="id_rol" id="id_rol" class="form-control">
                        <% rol.forEach((cadaElemento) => { %>
                            <% if (cadaElemento.nombre != 'Administrador') { %> 
                            <option value="<%= cadaElemento.id %> "> <%= cadaElemento.nombre %>  </option>
                            <% } %> 
                        <% }) %> 
                        </select>        
                    </div>
                    <div class="col-12 my-2">
                      <button type="submit" class="btn-home-inicio-sesion button-h">Registrarme</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
   
</body>
</html>