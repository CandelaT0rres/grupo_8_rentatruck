<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head') %>
    <title>Registro</title>
</head>

<body class=" container registro">
    <header>
        <div class="row justify-content-center">
            <div class="d-flex flex-column justify-content-center align-items-center">
                <h1 class="fw-normal text-dark fw-bold">Rent-A-Truck</h1>
                <a href="/"><img class ="logo rounded-pill" src="/img/logo.jpg" alt="logo"></a>
                <h3 class="fw-bold text-dark">Creá tu cuenta</h2>
            </div>
        </div>

    </header>
    <main class='container'>
        
        <div class="d-flex justify-content-center">
            <div class="row section-1-home container ">
                <form action="/user/registro" method="post" enctype="multipart/form-data" class="row g-3 fondo-registro">
                    <div class="col-md-6">
                      <label for="inputNombre4" class="form-label">Nombre/Razón social</label>
                      <input type="text" name="nombre" class="form-control <%=locals.errors && errors.nombre ? 'is-invalid' : null %>" id="inputNombre4"  value="<%=locals.oldData ? oldData.nombre : null %>" >
    
                      <% if (locals.errors && errors.nombre) { %>
                        <h5 class = "text-danger">
                            <%= errors.nombre.msg %> 
                        </h5>
                    <% } %>
                    </div>
    
                    <div class="col-md-6">
                        <label for="inputAddress" class="form-label">Dirección</label>
                        <input type="text" class="form-control <%=locals.errors && errors.direccion ? 'is-invalid' : null %> " id="inputAddress" name="direccion" value="<%= locals.oldData ? oldData.direccion : null %>">
    
                        <% if (locals.errors && errors.direccion) { %>
                            <h5 class = "text-danger">
                                <%= errors.direccion.msg %> 
                            </h5>
                            <% } %>
                    </div>
                    <div class="col-md-6">
                        <label for="inputApellido4" class="form-label">Apellido/Nombre Fantasía</label>
                        <input type="text" class="form-control <%= locals.errors && errors.apellido ? 'is-invalid' : null %>" id="inputApellido4" name="apellido" value="<%= locals.oldData ? oldData.apellido : null %>">
    
                        <% if (locals.errors && errors.apellido) { %>
                            <h5 class = "text-danger">
                                <%= errors.apellido.msg %> 
                            </h5>
                            <% } %>
                    </div>
                    <div class="col-md-6">
                          <label for="telefono" class="form-label">Teléfono</label>
                          <input type="number" class="form-control" id="telefono" name="telefono" value="<%= locals.oldData ? oldData.telefono : null %>">
                    </div>
                    <div class="col-md-6">
                        <label for="inputDNI4" class="form-label">DNI o CUIT</label>
                        <input type="number" class="form-control <%= locals.errors && errors.dni ? 'is-invalid' : null %>" id="inputDNI4" name="dni" value="<%= locals.oldData ? oldData.dni : null %>">
    
                        <% if (locals.errors && errors.dni) { %>
                            <h5 class = "text-danger">
                                <%= errors.dni.msg %> 
                            </h5>
                            <% } %>
                    </div>
                    <div class="col-md-6">
                        <label for="inputEmail4" class="form-label">E-Mail</label>
                        <input type="email" class="form-control <%= locals.errors && errors.email ? 'is-invalid' : null %>" id="inputEmail4" name="email" value="<%= locals.oldData ? oldData.email : null %>">
    
                        <% if (locals.errors && errors.email) { %>
                            <h5 class = "text-danger">
                                <%= errors.email.msg %> 
                            </h5>
                            <% } %>
                    </div>
                    <div class="col-md-6">
                      <label for="inputPassword4" class="form-label">Contraseña</label>
                      <input type="password" class="form-control <%= locals.errors && errors.password ? 'is-invalid' : null %>" id="inputPassword4" name="password">
    
                      <% if (locals.errors && errors.password) { %>
                        <h5 class = "text-danger">
                            <%= errors.password.msg %> 
                        </h5>
                        <% } %>
                    </div>
                    
                    <div class="col-md-6">
                        <label for="inputPassword2" class="form-label">Repita su contraseña</label>
                        <input type="password" class="form-control <%= locals.errors && errors.password ? 'is-invalid' : null %>" id="inputPassword2" name="password2">
    
                        <% if (locals.errors && errors.password) { %>
                            <h5 class = "text-danger">
                                <%= errors.password.msg %> 
                            </h5>
                            <% } %>
                      </div>
                    <div class="col-md-6 mt-4">
                  
                        <input type="file" name="img" class="form-control <%= locals.errors && errors.img ? 'is-invalid' : null %>">
                        <% if (locals.errors && errors.img) { %>
                            <h5 class = "text-danger">
                                <%= errors.img.msg %> 
                            </h5>
                            <% } %>
                      
                    </div>
                    <div class="col-md-6 mt-4">
                  <select name="id_rol" id="" class="form-control <%= locals.errors && errors.rol ? 'is-invalid' : null %>">
                      <% rol.forEach((cadaElemento) => { %>
                          
                          <option value="<%= cadaElemento.id %> "> <%= cadaElemento.nombre %>  </option>
    
                      <% }) %> 
                  </select>
                        <% if (locals.errors && errors.rol) { %>
                            <h5 class = "text-danger">
                                <%= errors.rol.msg %> 
                            </h5>
                            <% } %>          
                    </div>
    
                    <div class="col-12 my-2">
                      <button type="submit" class="btn-home-inicio-sesion button-h">Registrarme</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
   
</body>
</html>