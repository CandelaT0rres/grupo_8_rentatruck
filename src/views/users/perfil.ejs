<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title>perfil</title>
    <script src="/js/carrito.js"></script>
</head>
<body>
    <header>
        <%- include('../partials/header') %>
    </header>
    <main>
        <section>
            <div class="container emp-profile m-3 p-4">
                <div class="row justify-content-end">
                       
                        <div class="col-md-4">
                            <div class="img-fluid">
                                <h5>
                                 <%= user.nombre %> 
                                </h5>
                                <h6>
                                <%= user.apellido %> 
                                </h6>
                                <ul class="nav nav-tabs" id="myTab" role="tablist">
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-1 me-1">
                           <a href="/user/registro/<%= user.id %>"> <button type="submit" class="btn-home-inicio-sesion button-h">Editar perfil</button> </a>
                        </div>
                        <div class="col-md-1 ms-1">
                            <form action="/user/deleteUser/<%= user.id %>?_method=DELETE" method="post">
                                
                                <button type="submit" class="btn-home-inicio-sesion button-h">Eliminar </button>
                            </form>
                         </div>
                </div>
                <div class="row justify-content-center">
                        <div class="col-md-4">
                            <div class="profile-img">
                                <img src="/img/img-users/<%= user.img %>" alt="img <%= user.nombre %> "/>
                            </div>
                        </div>
                       
                        <div class="col-md-4">
                            <div class="tab-content profile-tab" id="myTabContent">
                                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label>Nombre</label>
                                         </div>
                                        <div class="col-md-6">
                                             <p><%= user.nombre %></p>
                                         </div>
                                    </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label>Email</label>
                                            </div>
                                            <div class="col-md-6">
                                                <p><%= user.email %></p>
                                            </div>
                                        </div>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <label>Dirección</label>
                                                </div>
                                                <div class="col-md-6">
                                                    <p><%= user.direccion %> </p>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <label>País</label>
                                                </div>
                                                <div class="col-md-6">
                                                    <p><%= user.pais %> </p>
                                                </div>
                                            </div>
                                </div>
                                <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label>Experience</label>
                                        </div>
                                        <div class="col-md-6">
                                            <p>Expert</p>
                                        </div>
                                    </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label>Hourly Rate</label>
                                            </div>
                                            <div class="col-md-6">
                                                <p>10$/hr</p>
                                            </div>
                                    </div>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <label>Total Projects</label>
                                                </div>
                                                <div class="col-md-6">
                                                    <p>230</p>
                                                </div>
                                            </div>
                                    <div class="row">
                                            <div class="col-md-6">
                                                <label>English Level</label>
                                            </div>
                                            <div class="col-md-6">
                                                <p>Expert</p>
                                            </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label>Availability</label>
                                        </div>
                                        <div class="col-md-6">
                                            <p>6 months</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                    <div class="col-md-12">
                                        <label>Your Bio</label><br/>
                                        <p>Your detail description</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>         
            </div>
        </section>
        <div class="container">
            <table class=" table table table-ligth table-hover table-carrito-background table-sm table-borderless">
                            <h4>Mis pedidos</h4>               
                <thead>
                    <tr class="table-dark">
                        <th scope="col"class="centrado-carrito">Pedido N°</th>
                        <th scope="col" class="centrado-carrito">Fecha</th>
                        <th scope="col" class="centrado-carrito">Total</th>
                    </tr>
                </thead>
               <%for (let element of pedidos) { %> 
                <tbody>
                    
                    <tr>
                        <td class="table-carrito-camiones centrado-carrito text-light fs-4"> <a class="text-decoration-none text-light border border-2 rounded-3 p-1" href="/user/pedidos/<%=element.id %>" ><%=element.id %></a></td>
                        <td class="table-carrito-camiones centrado-carrito text-light fs-5"><%= element.createdAt %></td>
                        <td class="table-carrito-camiones centrado-carrito text-light fs-5"> <%= element.total %></td>
                    </tr>
                          
                </tbody>
                <% } %> 
            </table>
        </div>
    </main>
    <br><br><br><br><br><br><br><br><br><br><br>
    <footer>
        <%- include('../partials/footer') %>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.2/dist/umd/popper.min.js" integrity="sha384-q9CRHqZndzlxGLOj+xrdLDJa9ittGte1NksRmgJKeCV9DrM7Kz868XYqsKWPpAmn" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>

</body>
</html>